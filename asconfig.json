{
  "$schema": "./asconfig.schema.json",
  "entries": [
    "./assemblyscript/src/glue/wasm/index.ts",
    "./assemblyscript/src/index-wasm.ts",
    "./assemblyscript_extension/src/index.ts"
  ],
  "options": {
    "exportStart": "_initialize",
    "exportRuntime": true,
    "initialMemory": 768,
    "runtime": "incremental",
    "disable": ["nontrapping-f2i"],
    "stackSize": 262144
  },
  "targets": {
    "debug": {
      "debug": true,
      "sourceMap": true
    },
    "release": {
      "optimizeLevel": 3,
      "shrinkLevel": 2
    }
  }
}
